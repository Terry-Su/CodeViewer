{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
		"target": "es5",
		"jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "types": ["node", "webpack-env"],
    "typeRoots": [
      "node_modules/@types/**/*",
      "src/typings/**/*"
    ],
    "esModuleInterop": true
  }
}
